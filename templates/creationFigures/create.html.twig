{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titreCreationFigure">Page dédiée à la création de figure</h1>

    {{ form_start(form) }}

    <!-- Nom et groupe -->
    <div class="container NomFigure">
        <div>
            <h2>Nom :</h2>
            {{ form_row(form.nom) }}
        </div>

        <div>
            <h2>Groupe de la figure :</h2>
            {{ form_row(form.categorie) }}
        </div>
    </div>

    <!-- Description -->
    <div class="container nomDesc">
        <div>
            <h2>Description :</h2>
            {{ form_row(form.description) }}
        </div>
    </div>

    <!-- Image et vidéo -->
    <div class="container imageVideo">
        <div>
            <h2>Image(s) :</h2>
            {{ form_row(form.images, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
        </div>
        </div>
    {#
        <div>
            <h2>Vidéo(s) :</h2>
            {{ form_row(form.videos, {'attr': {'class': 'inputVideo'}}) }}
        </div>#}
    </div>

    <div class="btnDivEnvoi">
        <button class="btnEnvoi" type="submit">Envoyer ma figure</button>
    </div>

    {{ form_end(form) }}
{% endblock %}
